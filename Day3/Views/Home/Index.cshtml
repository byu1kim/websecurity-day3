                        window.location.href
                            = "/Home/Confirmation?confirmationId=" + data.paymentID;
                    },
                    //after fail
                    error: function (msg) {
                        alert("fail: " + JSON.stringify(msg));
                    }
                });
            })
        },
        onCancel: function (data, actions) {
        },
    }, '#paypal-button');
</script>
